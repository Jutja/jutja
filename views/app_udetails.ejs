                    </ol>
                </section>

            <!-- Main content -->
            <section class="content">
                <div style="padding-left:10px;margin-top: 10px;width:40%;">
                <img src="<% if(user.pic & user.pic.small) { %><%= user.pic.small %><% } else { %> <%="https://www.gravatar.com/avatar/"+user.gravatar+"?s=200&d=identicon"%><%} %>" alt="User Image" style="width:100%" >
                </div>
                <div style="float:left;width:100%;" >
                    <h3 class="hl"><i class="fa fa-map-marker"></i> Contact Information</h3>
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td class="text-muted">Name</td>
                                    <td><% if(user.fname) { %>
                                            <%=user.fname+' '+user.lname %>
                                            <% } %></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Email</td>
                                    <td><%= user.email %> </td>
                                </tr>
                            </tbody>
                        </table>
                </div>
        
            <div id="password" style="">
                    <button id="udetails_repassword">Reset Password</button>
                        <br>
                    <div id="new_password" style="display:none;">
                        <label for="password">Enter Your New Password</label>
                        <input type="password" id="repassword" name="p"><br>
                        <button id="update_password">Update Password</button>
                        <button id="cancel">Cancel</button>
                    </div>
                </div><br>
                <div id="gravatar" style="">
                  <!--    <form method="GET" action="/gravatar" enctype="application/x-www-form-urlencoded" >-->
                  <button id="reset_gravatar">Reset Gravatar</button>
                  <br>
                  <div id="gravatar_id" style="display:none;">
                       <label for="gravatar">Enter a Gravatar email</label>
                       <input type="email" id="gravatar_mail" name="mail"><br>
                        <button id="update_gravatar">Update Gravatar</button>
                        <button id="cancel_gravatar">Cancel</button>
                  </div><br>
                      <a  target="_blank" href="https://en.gravatar.com/">What is gravatar? How to Use it. </a>

                </div>

