<script type="text/javascript">
   // var str= String(<%=user.madeon%>);
    var a = new Date('<%=user.madeon%>');
    var final1= a.toUTCString().split(/GMT.*/);
    document.getElementById("temp1").innerHTML = "Member Since <br> " + final1[0];

    //reset password
    ////////////////////////////////////

    var reset = document.getElementById("udetails_repassword");
    reset.onclick = function(){
       $("#new_password").fadeIn();
    }
    var cancel = document.getElementById("cancel");
    cancel.onclick = function(){
        $("#new_password").fadeOut();
    }
    var update = document.getElementById("update_password");
    update.onclick = function(){
        $("#new_password").fadeOut();
        function success(data){
            console.log(data);
        }
        console.log("1");
        var url = "/change-password";
        var url_data = {p:$("#repassword").val()};
         $.ajax({
            type: "POST",
            url: url,
            data: url_data,
            success: success
        });
    }

    //reset gravatar
    ///////////////////////////////
    document.getElementById("reset_gravatar").onclick =function(){
        $("#gravatar_id").fadeIn();
    }
    document.getElementById("cancel_gravatar").onclick = function(){
        $("#gravatar_id").fadeOut();
    }
    document.getElementById("update_gravatar").onclick = function(){
        $("#gravatar_id").fadeOut();
        function success(data){
            console.log(data);
        }
    //    console.log("1");
        var url = "/gravatar";
        var url_data = {mail:$("#gravatar_mail").val()};
         $.ajax({
            type: "GET",
            url: url,
            data: url_data,
            success: success
        });
    }
</script>
