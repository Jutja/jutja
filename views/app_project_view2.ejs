<form id="create_map"  style="display:none;">
<span class="button b-close">
<span>X</span></span>
  <h1 id="h1">Building Your Map </h1>
  <h2><span>Enter details for your map !!!</span></h2>
  <label>
  <span>Map Name : </span>
  <input id="map_name" type="text" required  name="name" placeholder=" Enter the name of the map "/></label>
  
  <label>
    <span>Title of note :</span><input id="cr_name" required type="text" name="name" placeholder="Enter title for your first note"/></label>
  <label>
  <span>Message :</span>
  <textarea id="cr_message" name="info" placeholder="Enter details about your note"></textarea></label>
  <label>
    <span>Due Date :</span>
    <div class="input-group date"  >
            <input type="text" required class="form-control" id="dateCreate"><span class="input-group-addon" id="bord"></span>
        </div>
    </label>
    <label>
      <span>Status :</span>
      <select class="dropdown-menu" style="width: 150px;height: 24px; margin-bottom: 16px; margin-right: 6px;margin-top: 4px;" name="status" id="create_status">
      <option value="Incomplete" >Incomplete</option>
      <option value="Completed">Completed</option>
      <option value="Ongoing">Ongoing</option>
      <option value="Not Started">Not started</option>
      </select>
    </label>
    <br>
    <div>
    <tr>
    <td>
      <button type="submit" style="width: 100px;margin-left: 75px;" id="submit2">Submit</button></td>
    <td>
      <button style="width: 100px;margin-left: 50px;" type="reset" id="reset">Reset</button></td>
    </tr>
    </div>
  </form> 

<div id="map_viewform" style="display:none" method="get" >
<span class="button b-close">
<span>X</span></span>
<form id="projedit"  >
    <h1 id="h1">Edit your Project </h1> 
    <div>
        <label for="name"> New name of Project:</label>
        <input type="text" required  id="name" name="name" value='<%=project.name%>' style="margin-bottom:16px;"><br>
        <input type=hidden id="old_id" name= "old_id" value= '<%= project._id%>'>
        <input type=hidden id="old_name" name= "old_name" value= '<%= project.name%>'>
        <label for="members">Enter the email-id of your team members:     </label>

          <% var str=""; for(var i=0; i<((project.users.editor.length)-1); i++) { 
            if((project.users.editor[i])==" ")
              {
                continue;
              }
            str= str  + " , " + String(project.users.editor[i]);  } %>
    <div>
    <input type="email" value='<%=str %>' data-role="tagsinput" placeholder="Add Email" />
    </div>
      <div>
        <tr>
        <td>
          <button style=" width: 150px;" onclick="submitForm('/project/edit')" type="submit" id="submit2">Submit</button></td>
        <td>
          <button style=" width: 150px;" onclick="submitForm('/project/delete')" type="button" id="delete" >Delete Project</button></td>
        </tr>
      </div>
  </form>
